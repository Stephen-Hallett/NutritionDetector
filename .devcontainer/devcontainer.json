// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/python
{
	"name": "Python 3 - FastAPI",
	"image": "mcr.microsoft.com/devcontainers/python:1-3.12-bullseye",

	// Features to add tools like ruff (linter) and other configurations.
	"features": {
		"ghcr.io/devcontainers-extra/features/ruff:1": {}, // Linter
	},

	"forwardPorts": [8000],

	// Automatically install dependencies after the container is created
	"postCreateCommand": "pip install -r API/requirements.txt",

	// Customize devcontainer tools (e.g., VS Code extensions)
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.python",
				"ms-python.vscode-pylance",
				"esbenp.prettier-vscode",
				"charliermarsh.ruff",
				"ms-azuretools.vscode-azurefunctions"
			]
		}
	},

	// Uncomment to connect as root if needed.
	// "remoteUser": "root"
}
